<table class="table table-bordered calendar-table">
	<thead>
  	<tr class="calendar-head">
  		<th>Sun</th>
  		<th>Mon</th>
  		<th>Tue</th>
  		<th>Wed</th>
  		<th>Thu</th>
  		<th>Fri</th>
  		<th>Sat</th>
  	</tr>
    <tr>
      <h1 class="center"><%= @date.strftime("%Y %B") %><h1>
    </tr>
    <tr>
      <%= link_to "返回當前月份", controller: controller.controller_name, action: controller.action_name %>
    </tr>       
  </thead>
  <tbody>
  	<% @calendar.each do |each_row| %>
  	  <tr>
  	  	<% each_row.each do |cell| %>
  	  		<td class="calendar-td <%= cell["state"] %>">
  	  			<p>
              <%= cell["day"] %> 
            </p>
  	  			<p>
  	  				<%= link_to cell["title"], course_path(cell["id"]) if cell["course"] %>
  	  			</p>
  	  			<p class="font-13"><%= cell["description"].truncate(50) if cell["description"]  %></p>
  	  		</td>
  	  	<% end %>	
  	  </tr>
  	<% end %>  
  </tbody>
</table>

<%= render 'calendar/month_options' %>